@model FileCreationTool.ViewModels.CompanyViewModel

@{
    ViewData["Title"] = "CreateValidation";
}

<h2>Create Validation SQL</h2>

<br />

@using (Html.BeginForm("CreateValidation", "Tool", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
{
